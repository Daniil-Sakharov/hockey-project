# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/db_name?sslmode=disable
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
EXTERNAL_POSTGRES_PORT=5433
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=db_name
POSTGRES_SSL_MODE=disable
MIGRATIONS_DIR=migrations

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
LOG_AS_JSON=false

# ============================================================================
# Application
# ============================================================================
APP_ENV=development
SERVICE_NAME=hockey-parser

# ============================================================================
# OTEL (optional)
# ============================================================================
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=hockey-scheduler

# ============================================================================
# Telegram Bot
# ============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_DEBUG=false

# ============================================================================
# General Parsing Settings
# ============================================================================
PARSING_REQUEST_TIMEOUT=30s
PARSING_MAX_RETRIES=3
PARSING_RETRY_DELAY=5s
PARSING_USER_AGENT=HockeyBot/1.0
PARSING_ENABLE_RETRY_JOBS=true

# ============================================================================
# Junior Parser (junior.fhr.ru + региональные домены)
# ============================================================================
JUNIOR_BASE_URL=https://junior.fhr.ru
JUNIOR_REQUEST_DELAY=100ms
JUNIOR_WORKER_COUNT=10
JUNIOR_DOMAIN_WORKERS=5
JUNIOR_MIN_BIRTH_YEAR=2008
JUNIOR_BATCH_SIZE=100
JUNIOR_ENABLE_ALL_SEASONS=true

# ============================================================================
# Junior Stats Parser (статистика игроков junior)
# ============================================================================
JUNIOR_STATS_REQUEST_DELAY=100ms
JUNIOR_STATS_TOURNAMENT_WORKERS=3
JUNIOR_STATS_BATCH_SIZE=100
JUNIOR_STATS_SKIP_EXISTING=false

# ============================================================================
# FHSPB Parser (fhspb.ru)
# ============================================================================
FHSPB_BASE_URL=https://fhspb.ru
FHSPB_REQUEST_DELAY=150ms
FHSPB_MAX_BIRTH_YEAR=2008
FHSPB_TOURNAMENT_WORKERS=3
FHSPB_TEAM_WORKERS=5
FHSPB_PLAYER_WORKERS=10
FHSPB_STATISTICS_WORKERS=3
FHSPB_MODE=INCREMENTAL
FHSPB_RETRY_ENABLED=true
FHSPB_RETRY_MAX_ATTEMPTS=3
FHSPB_RETRY_DELAY=5m

# ============================================================================
# FHSPB Stats Parser (статистика игроков fhspb)
# ============================================================================
FHSPB_STATS_REQUEST_DELAY=150ms
FHSPB_STATS_TOURNAMENT_WORKERS=3
FHSPB_STATS_BATCH_SIZE=100
FHSPB_STATS_SKIP_EXISTING=false

# ============================================================================
# MIHF Parser (stats.mihf.ru)
# ============================================================================
MIHF_BASE_URL=https://stats.mihf.ru
MIHF_REQUEST_DELAY=150ms
MIHF_MIN_BIRTH_YEAR=2008
MIHF_SEASON_WORKERS=2
MIHF_TOURNAMENT_WORKERS=3
MIHF_TEAM_WORKERS=5
MIHF_PLAYER_WORKERS=10
MIHF_RETRY_ENABLED=true
MIHF_RETRY_MAX_ATTEMPTS=3
MIHF_RETRY_DELAY=5m
MIHF_MAX_SEASONS=0
MIHF_TEST_SEASON=

# ============================================================================
# FHMoscow Parser (fhmoscow.com)
# ============================================================================
FHMOSCOW_BASE_URL=https://www.fhmoscow.com
FHMOSCOW_REQUEST_DELAY=150ms
FHMOSCOW_MIN_BIRTH_YEAR=2008
FHMOSCOW_SEASON_WORKERS=2
FHMOSCOW_TOURNAMENT_WORKERS=3
FHMOSCOW_TEAM_WORKERS=5
FHMOSCOW_PLAYER_WORKERS=10
FHMOSCOW_RETRY_ENABLED=true
FHMOSCOW_RETRY_MAX_ATTEMPTS=3
FHMOSCOW_RETRY_DELAY=5m
FHMOSCOW_MAX_SEASONS=0
FHMOSCOW_TEST_SEASON=
FHMOSCOW_SCAN_PLAYERS=true
FHMOSCOW_MAX_PLAYER_ID=15000

# ============================================================================
# FHR Registry (legacy)
# ============================================================================
FHR_REESTR_URL=url
FHR_USERNAME=username
FHR_PASSWORD=password
FHR_URL=url

# ============================================================================
# Calendar Parsers (все источники)
# ============================================================================

# Junior Calendar
JUNIOR_CALENDAR_REQUEST_DELAY=150ms
JUNIOR_CALENDAR_TOURNAMENT_WORKERS=3
JUNIOR_CALENDAR_GAME_WORKERS=5
JUNIOR_CALENDAR_PARSE_PROTOCOL=true
JUNIOR_CALENDAR_PARSE_LINEUPS=true
JUNIOR_CALENDAR_PARSE_VIDEO=true
JUNIOR_CALENDAR_SKIP_EXISTING=true

# FHSPB Calendar
FHSPB_CALENDAR_REQUEST_DELAY=150ms
FHSPB_CALENDAR_TOURNAMENT_WORKERS=3
FHSPB_CALENDAR_SKIP_EXISTING=true

# MIHF Calendar
MIHF_CALENDAR_REQUEST_DELAY=150ms
MIHF_CALENDAR_TOURNAMENT_WORKERS=3
MIHF_CALENDAR_SKIP_EXISTING=true

# FHMoscow Calendar
FHMOSCOW_CALENDAR_REQUEST_DELAY=150ms
FHMOSCOW_CALENDAR_SKIP_EXISTING=true

# ============================================================================
# Scraping (legacy)
# ============================================================================
SCRAPING_MAX_PLAYERS=1000
SCRAPING_HEADLESS_MODE=true
SCRAPING_TIMEOUT=60s
